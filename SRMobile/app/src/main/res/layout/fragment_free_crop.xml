<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".FreeCropFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/freeCropLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/themeColor"
        android:clickable="true"
        android:orientation="vertical"
        android:weightSum="7">

        <LinearLayout
            android:id="@+id/freeCropMainLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="6"
            android:background="@color/themeColorLight"
            android:orientation="vertical">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/freeCropWidgetLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/loadBeforeBtn"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_border"
                android:fontFamily="@font/dovemayo"
                android:text="@string/save"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/testImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>