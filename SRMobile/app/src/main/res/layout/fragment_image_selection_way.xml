<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageSelectionWay">

    <FrameLayout
        android:id="@+id/main_Framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ss.com.bannerslider.Slider
            android:id="@+id/main_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:slider_emptyView="@layout/layout_empty_view"
            app:slider_interval="5000"
            app:slider_loopSlides="true" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/main_buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_Framelayout"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/main_gallery_btn"
                android:layout_width="145dp"
                android:layout_height="65dp"
                android:layout_marginEnd="15dp"
                android:text="갤러리" />

            <Button
                android:id="@+id/main_imageProcessing_btn"
                android:layout_width="145dp"
                android:layout_height="65dp"
                android:layout_marginStart="15dp"
                android:text="이미지프로세싱" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/main_sr_btn"
                android:layout_width="145dp"
                android:layout_height="65dp"
                android:layout_marginEnd="15dp"
                android:text="SR" />

            <Button
                android:id="@+id/main_superCamera_btn"
                android:layout_width="145dp"
                android:layout_height="65dp"
                android:layout_marginStart="15dp"
                android:text="슈퍼카메라" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_buttonLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_buttonLayout"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/main_camera_btn"
            android:layout_width="142dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:text="카메라" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_buttonLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_buttonLayout2"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/main_setting_btn"
            android:layout_width="142dp"
            android:layout_height="61dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="55dp"
            android:text="설정" />

        <Button
            android:id="@+id/main_extra_btn"
            android:layout_width="142dp"
            android:layout_height="61dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="10dp"
            android:text="추가버튼"
            app:layout_constraintRight_toRightOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>